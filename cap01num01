/* ------------------------------------------------------------------
    Li0101.cpp  该程序用于求一个数的平方 
   ------------------------------------------------------------------
*/
#include <iostream>
using namespace std;

int main(void)
{
     int num, square;	// 定义整型变量 num和square 

     cout << "num="; 		// 输出提示信息num= 
     cin >> num; 			// 输入一个数，赋给变量 num 
     square = num * num; // 计算 num 的平方，结果赋值给变量 square 
     cout << "num的平方为:" << square << '\n';	// 输出变量square的值，
     return 0;                                       	// '\n'表示换行
}
